<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet">
	<title><%= title %></title>
</head>

<body>
	<div class="container">
		<!-- Navbar -->
		<%- include('includes/navbar'); %>
		
		<!-- Card: Header and Footer -->
		<div class="card mt-3">
			<div class="card-header bg-info"><%= title %></div>
			<div class="card-body">
				<% if(typeof errors != 'undefined') { %>
					<div class="alert alert-danger alert-dismissible fade show" role="alert">
						<ul class="mb-0">
							<% errors.forEach(function(err){ %>
								<li><%= err.msg %></li>	
							<% }); %>
						</ul>
						<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
					</div>
				<% } %>
				<form action="/baiviet/them" method="post"  enctype="multipart/form-data" class="needs-validation" novalidate>
					<div class="mb-3">
						<label for="MaChuDe" class="form-label">Chọn phân loại:</label>
						<select class="form-select" id="MaChuDe" name="MaChuDe" required>
							<option value="">-- Chọn --</option>
							<% chude.forEach(function(cd) { %>
								<option value="<%= cd.ID %>"><%= cd.TenChuDe %></option>
							<% }); %>
						</select>
					</div>
					<div class="mb-3">
						<label for="HinhAnh" class="form-label">Hình ảnh:</label>
						<input type="file" class="form-control" id="HinhAnh" name="HinhAnh" value="" >
					</div>
					<div class="mb-3">
						<label for="TieuDe" class="form-label">Tên sản phẩm:</label>
						<input type="text" class="form-control" id="TieuDe" name="TieuDe" value="" required>
					</div>
					<div class="mb-3">
						<label for="GiaTien" class="form-label">Giá tiền:</label>
						<textarea class="form-control" id="GiaTien" name="GiaTien" required></textarea>
					</div>
					<div class="mb-3">
						<label for="NoiDung" class="form-label">Nội dung sản phẩm:</label>
						<textarea class="form-control ckeditor" id="NoiDung" name="NoiDung" required></textarea>
					</div>
					
					<button type="submit" class="btn btn-danger">Đăng sản phẩm</button>
				</form>
			</div>
		</div>
		
		<!-- Footer -->
		<%- include('includes/footer'); %>
	</div>
	
	<%- include('includes/javascript'); %>
	<script src="https://cdn.ckeditor.com/4.18.0/full/ckeditor.js"></script>
	<script>
		CKEDITOR.replace('NoiDung', {
			customConfig: 'http://127.0.0.1:3000/js/config.js'
		});
	</script>
</body>

</html>