<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet">
	<title><%= title %></title>
</head>
   <style>
	   td
	   {
		font-family: Arial, Helvetica, sans-serif;
    font-size: 10px;
    font-weight:700;
    
	
    color:whitesmoke;
	   }
	   th
	   {
		font-family: Arial, Helvetica, sans-serif;
    font-size: 20px;
    font-weight:600	;
    
	
    color:whitesmoke;
	   }
   </style>
<body>
	<div class="container">
		<!-- Navbar -->
		<%- include('includes/navbar'); %>
		
		<!-- Card: Header and Footer -->
		<div class="card mt-3 ">
			<div class="card-header bg-primary"><%= title %></div>
			<div class="card-body table-responsive ">
				<% if(successMsg) { %>
					<div class="alert alert-info alert-dismissible fade show" role="alert">
						<%= successMsg %>
						<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
					</div>
				<% } %>
				<table class="table table-bordered table-hover table-sm mb-0 bg-secondary">
					<thead>
						<tr  class=" bg-danger">
							<th width="5%">#</th>
							<th width="15%">Tên sản phẩm</th>
							<th width="15%">Số lượng</th>
                            <th width="15%">Mã khách hàng</th>
							<th width="15%">Tên khách hàng</th>
							<th width="15%">Số điện thoại</th>
							<th width="10%">Gmail</th>
							<th width="40%">Địa chỉ</th>
							<th width="5%">Sửa</th>
							<th width="5%">Xóa</th>
						</tr>
					</thead>
					<tbody>
						<% var stt = 1; %>
						<% Khachhang.forEach(function(kh){ %>
							<tr>
								<td class="align-middle"><%= stt++ %></td>
								<td class="align-middle small"><%= kh.TieuDe %></td>
								<td class="align-middle small"><%= kh.SoLuong %></td>
								<td class="align-middle small"><%= kh.MaKhachHang %></td>
								<td class="align-middle small"><%= kh.TenKhachHang %></td>
								<td class="align-middle small"><%= kh.SoDienThoai %></td>
							    <td class="align-middle small"><%= kh.Gmail %></td>
                                <td class="align-middle small"><%= kh.DiaChi %></td>
								<!-- <td class="align-middle text-center"><a href="/Khachhang/sua/<%= kh.MaKhachHang %>"><i class="bi bi-pencil-square"></i></a></td> -->
                                <td class="align-middle text-center"><a href="/Khachhang/xoa/<%= kh.MaKhachHang %>" onclick="return confirm('Bạn có muốn xóa khách hàng có tên <%= kh.TenKhachHang %> không?');"><i class="bi bi-trash text-danger"></i></a></td>
							</tr>
						<% }); %>
					</tbody>
				</table>
			</div>
		</div>
		
		<!-- Footer -->
		<%- include('includes/footer'); %>
	</div>
	
	<%- include('includes/javascript'); %>
</body>

</html>
